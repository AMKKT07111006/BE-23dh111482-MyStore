
@model _23dh111482_My_Store.Models.ViewModel.HomeProductVM
@using PagedList.Mvc

<link href="~/Content/css/Index.css" rel="stylesheet" />

@*HIỂN THỊ DS SẢN PHẢM*@
@if (Model.NewProducts != null && Model.NewProducts.Any())
{
    <section class="container-fluid products-list">
        <h1 style="color:lightskyblue; font-weight:bold">Sản phẩm mới</h1>
        <ul class="list-container">
            @foreach (var product in Model.NewProducts)
            {
                <li class="products-items">
                    <div>
                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID })">
                            @*<img src="@Html.DisplayFor(modelItem => product.ProductImage)"*@
                                 <img src="@product.ProductImage" />
                        </a>
                    </div>
                    <div>
                        <p class="prodPrice">
                            @*@Html.DisplayFor(modelItem => product.ProductPrice)*@   @product.ProductPrice
                        </p>

                        <p class="prodName">
                            @*@Html.DisplayFor(modelItem => product.ProductName)*@    @product.ProductName
                        </p>

                        <p class="prodSale">
                            Đã bán: &nbsp; @*@Html.DisplayFor(modelItem => product.OrderDetails.Count)*@   @product.OrderDetails.Count
                        </p>
                    </div>
                </li>

            }
        </ul>
    </section>

    @*HIỂN THỊ PHÂN TRANG*@
    <div class="pagenation-container">
        @Html.PagedListPager(Model.NewProducts, page => Url.Action("Index", new
            { page, searchTerm = Model.SearchTerm }))
    </div>
}
else
            {
                <p>Không tìm thấy sản phẩm phụ hợp.</p>
            }

